@model meals_app.Models.SearchMealByNameModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Meals by name</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SearchByName" method="post">
            <div class="form-group">
                <label asp-for="MealName" class="control-label">Meal Name:</label>
                <input asp-for="MealName" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>